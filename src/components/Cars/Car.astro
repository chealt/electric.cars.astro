---
import Image from './Image.astro';
import Name from './Name.astro';
import Details from './Details.astro';
import HorizontalScroller from '../HorizontalScroller/HorizontalScroller.astro';
import HorizontalScrollerItem from '../HorizontalScroller/Item.astro';

const { name, make, model, year, images, ...rest } = Astro.props;
---
<HorizontalScroller>
  {images.map(({ path }) => (
    <HorizontalScrollerItem>
      <Image name={name} make={make} model={model} year={year} imagePath={path} />
    </HorizontalScrollerItem>
  ))}
</HorizontalScroller>
<Name name={name} year={year} />
<Details {...rest} />
